@using X.PagedList.Web.Common
@using X.PagedList.Mvc.Core
@using X.PagedList;
@using EntityLayer.Concrete
@model IPagedList<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<head>
    <meta http-equiv="refresh" content="40">

    <style>
        .ss {
            background: linear-gradient(#cac0c0,#fff);
        }

        .aa {
            font-size: small;
        }

        ul.pagination li :hover:not(.active) {
            background-color: #4CAF50;
        }
    </style>
</head>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Gündem <span class="text-muted text-small aa">@DateTime.Now.ToString("MM/dd/yyyy h:mm tt")</span></h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card ss">
                            <a href="/Blog/BlogReadAll/@item.BlogId">
                                <img src="~/BlogImageFiles/@item.BlogImage" style="height:18rem" class="card-img-top img-fluid ss" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>@item.BlogCreateDate.ToString("ddd, dd MMM yyyy")
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> @ViewBag.comment
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.Category.CategoryName
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    @item.BlogTitle
                                </h5>
                                <a href="/Blog/BlogReadAll/@item.BlogId" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>
                    }
                </div>
                <!--//left-->
                <hr />

                @Html.PagedListPager((IPagedList)Model, Sayfa => Url.Action("Index", new { Sayfa = Sayfa }), new PagedListRenderOptions
           {
               DisplayItemSliceAndTotal = false,
               ContainerDivClasses = new[] { "navigation" },
               LiElementClasses = new[] { "page-item" },
               PageClasses = new[] { "page-link" },
               LinkToFirstPageFormat = "««",
               LinkToPreviousPageFormat = "«",
               LinkToIndividualPageFormat = "{0}",
               LinkToNextPageFormat = "»",
               LinkToLastPageFormat = "»»",


               UlElementClasses = new[] { "pagination" },
           })


            </div>
        </div>
    </div>
</section>




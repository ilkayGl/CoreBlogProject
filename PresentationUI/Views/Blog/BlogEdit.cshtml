@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogEdit";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!-- include summernote css/js -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-4"> Blog Güncelle</h2>
            <form class="forms-sample" asp-action="BlogEdit" asp-controller="Blog" method="post" autocomplete="off" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BlogId" />
                <div class="form-group">
                    <label for="exampleInputName1">Blog Başlığı</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="BlogTitle" placeholder="Blog Başlığı">
                    <span class="badge badge-danger" asp-validation-for="BlogTitle"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="BlogCreateDate" placeholder="Tarih" class="form-control" border-radius:10px" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Kategoriler</label>
                    <select asp-for="CategoryId" asp-items="@((List<SelectListItem>)ViewBag.dgr1)" class="form-control" border-radius: 10px">
                        <option>Kategori Seçiniz...</option>
                    </select>
                    <span class="badge badge-danger" asp-validation-for="CategoryId"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel :</label>

                    <div class="custom-file" style="width:20rem ; margin-left:9px">
                        <input type="file" asp-for="Image" class="custom-file-input" id="customFile">
                        <label class="custom-file-label " for="customFileLang">Resim Seçiniz</label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="BlogImage" placeholder="Blog Resmi" class="form-control" border-radius:10px" />
                </div>

                <div class="form-group">
                    <span class="badge badge-danger"></span>
                    <textarea id="blogContent" asp-for="BlogContent"></textarea>
                </div>

                <button type="submit" class="btn btn-gradient-success mr-2">Güncelle</button>
                <button class="btn btn-light" type="reset">İptal Et</button>
            </form>
        </div>
    </div>
</div>





<!--SummerNote JS-->
<script>

    $('#blogContent').summernote();

</script>



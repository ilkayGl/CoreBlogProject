@model IEnumerable<EntityLayer.Concrete.Blog>


@{ ViewData["Title"] = "BlogReadAll";
    Layout = "~/Views/Shared/_UserLayout.cshtml"; }


<head>
    <script src="https://kit.fontawesome.com/709f5aa806.js" crossorigin="anonymous"></script>

    <style>
        .img1 {
            padding: 0;
            max-height: 100%;
            min-width: 100%;
        }
    </style>


</head>



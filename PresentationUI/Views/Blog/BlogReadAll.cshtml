    <!--/blog-->
    <div class="container">
        <div class="row">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                @foreach (var item in Model)
                {
                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a style="width:40rem; height:40rem">
                                    <img src="~/BlogImageFiles/@item.BlogImage" alt="image" class="img1 img-fluid" />
                                </a>
                            </div>
                            <div class="blog-info-middle">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @item.BlogCreateDate.ToString("ddd, dd MMM yyyy")
                                        </a>
                                    </li>

                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-thumbs-up"></i> 201 Beğeni
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-comment"></i> @ViewBag.comment Yorum
                                        </a>
                                    </li>
                                    <li class="ml-2">
                                        <a href="#">
                                            <i class="fas fa-feather-alt"></i> @item.Writer.WriterName
                                        </a>
                                    </li>

                                </ul>
                            </div>

                        </div>

                        <h3>
                            <span>@item.BlogTitle </span>
                        </h3>
                        <p>
                            @Html.Raw(item.BlogContent)
                        </p>

                    </div>
                }

                <!--Comment List ViewComponent-->
                <vc:comment-list-by-blog id="@ViewBag.i"></vc:comment-list-by-blog>
                <!--BlogController=id çektik - CommentListByBlog:ViewComponent Yapısını kullandık(vc)-->
                <!--Comment Add View-->
                <partial name="~/Views/Comment/PartialAddComment.cshtml" />


            </div>

            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                    <div class="tech-btm">
                        @*<img src="~/Thema/web/images/banner1.jpg" class="img-fluid" alt="">*@
                    </div>

                    <!--SubscribeMail PartialView -->

@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<!-- include summernote css/js -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-4">Yeni Blog Ekle</h2>
            <form class="forms-sample" asp-action="BlogAdd" asp-controller="Blog" method="post" autocomplete="off" enctype="multipart/form-data">
                <input type="hidden" asp-for="WriterId" />
                <div class="form-group">
                    <label for="exampleInputName1">Blog Başlığı</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="BlogTitle" placeholder="Blog Başlığı">
                    <span class="badge badge-danger" asp-validation-for="BlogTitle"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Kategoriler</label>
                    <select asp-for="CategoryId" asp-items="@((List<SelectListItem>)ViewBag.dgr1)" class="form-control" border-radius: 10px">
                        <option>Kategori Seçiniz...</option>
                    </select>
                    <span class="badge badge-danger" asp-validation-for="CategoryId"></span>
                </div>
                @*<div class="form-group">
                        <label>Görsel</label>
                        <input type="file" asp-for="BlogImage">
                    </div>*@
                <div class="form-group">
                    <input type="text" asp-for="BlogImage" placeholder="Blog Resmi" class="form-control" border-radius:10px" />
                </div>

                <div class="form-group">
                    <span class="badge badge-danger"></span>
                    <textarea id="summernote" asp-for="BlogContent"></textarea>
                </div>

                <button type="submit" class="btn btn-gradient-success mr-2">Ekle</button>
                <button class="btn btn-light" type="reset">İptal Et</button>
            </form>
        </div>
    </div>
</div>



<!--SummerNote JS-->

<script>
    $('#summernote').summernote({
        placeholder: 'Bir İçerik Girerek Başla..',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ],
    });
</script>

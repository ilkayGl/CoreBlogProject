@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}



<!-- include summernote css/js -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form asp-action="NewMessage" asp-controller="Message" method="post" enctype="multipart/form-data" autocomplete="off">
                <h2 class="card-title"> Yeni Bir Mesaj Oluştur</h2>
                <hr class="mb-5" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label for="exampleInputName2">Alıcı Seçin:</label>
                    <select asp-for="ReceiverUser.WriterId" asp-items="@((List<SelectListItem>)ViewBag.dgr2)" class="form-control" border-radius: 10px">
                    </select>
                </div>

                <div class="form-group">
                    <label for="exampleInputName2">Konu:</label>
                    <input type="text" asp-for="Subject" placeholder="" class="form-control" border-radius:10px" />
                    <span asp-validation-for="Subject" style="color:red"></span>
                </div>

                <div class="form-group">
                    <span class="badge badge-danger"></span>
                    <textarea id="Content" asp-for="MessageDetails"></textarea>
                    <span asp-validation-for="MessageDetails" style="color:red"></span>
                </div>
                <button type="submit" class="btn btn-primary">Gönder</button>
            </form>
        </div>
    </div>
</div>





<!--SummerNote JS-->
<script>

    $('#Content').summernote({
        placeholder: 'Bir Mesaj Oluştur...',
        tabsize: 2,
        height: 120,
    });

</script>


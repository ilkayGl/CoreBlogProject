@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!-- include summernote css/js -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-4"> Mesaj Detay Sayfası</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MessageId" />

            <div class="form-group">
                <label for="exampleInputName2">Tarih</label>
                <input type="date" asp-for="MessageDate" placeholder="Tarih" class="form-control" border-radius:10px" readonly />
            </div>

            <div class="form-group">
                <label for="exampleInputName2">Konu</label>
                <input type="text" asp-for="Subject" placeholder="" class="form-control" border-radius:10px" />
            </div>

            <div class="form-group">
                <span class="badge badge-danger"></span>
                <textarea id="Content" asp-for="MessageDetails"></textarea>
            </div>
        </div>
    </div>
</div>





<!--SummerNote JS-->
<script>

    $('#Content').summernote();

</script>




<!DOCTYPE html>
<html lang="tr">

<head>
    <title>| UserLayout </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Weblog a Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link href="~/Thema/web/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="~/Thema/web/css/single.css">
    <link href="~/Thema/web/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Thema/web/css/fontawesome-all.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">
    <style>
        .s {
            background: linear-gradient(#fff,#cac0c0);
        }
    </style>


</head>

<body>
    <!--Header-->
    <partial name="~/Views/Shared/PartialViews/_HeaderPartialView.cshtml" />
    <!--//header-->
    <!--/main-->
    <div class="s">
        @RenderBody()
    </div>

    <!--//main-->
    <!--footer-->
    <partial name="~/Views/Shared/PartialViews/_FooterPartialView.cshtml" />
    <!--//footer-->
    <!-- js -->
    <script src="~/Thema/web/js/jquery-2.2.3.min.js"></script>
    <!-- //js -->
    <!--/ start-smoth-scrolling -->
    <script src="~/Thema/web/js/move-top.js"></script>
    <script src="~/Thema/web/js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>
    <!--// end-smoth-scrolling -->

    <script>
        $(document).ready(function () {
            /*
                                    var defaults = {
                                            containerID: 'toTop', // fading element id
                                        containerHoverID: 'toTopHover', // fading element hover id
                                        scrollSpeed: 1200,
                                        easingType: 'linear'
                                        };
                                    */

            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>


    <!-- //Custom-JavaScript-File-Links -->
    <script src="~/Thema/web/js/bootstrap.js"></script>

    <!--Toastr-->
    @await Component.InvokeAsync("Notyf")

</body>

</html>

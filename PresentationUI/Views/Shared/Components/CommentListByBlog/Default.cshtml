@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">

    <h4>Yorumlar</h4>

    @foreach (var item in Model)
    {
        <hr />
        <div class="media">
            <img src="~/WriterImageFiles/yok.ico" style="min-width:3rem; max-height:5rem" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <span class="text-muted mt-0">@item.CommentDate.ToString("dddd, dd /MM /yyyy")</span>
                <div>
                    @item.CommentTitle
                    <br />
                    @item.CommentContent
                </div>
                <p>

                </p>
            </div>
        </div>
        <hr />
    }

</div>

